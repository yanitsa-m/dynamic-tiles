<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALL DONE"
        android:id="@+id/next"
        android:clickable="true"
        android:textSize="17sp"
        android:onClick="allDone"
         android:padding="15dp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_purple" />

    <TextView
        android:text=" Score: 0 "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:textSize="17sp"

        android:background="@android:color/holo_green_light"
        android:padding="10dp"
        android:layout_alignBaseline="@+id/next"
        android:layout_alignBottom="@+id/next"
        android:layout_toEndOf= "@+id/time"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:text="Time :30  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:textSize="17sp"
        android:background="@android:color/holo_orange_light"
        android:padding="10dp"

        android:layout_marginLeft="5dp"
        android:layout_alignBaseline="@+id/next"
        android:layout_alignBottom="@+id/next"
        />

    <GridView
        android:id="@+id/gridview"
       android:layout_width="match_parent"
       android:layout_height="350dp"
       android:columnWidth="150dp"
       android:numColumns="4"
       android:verticalSpacing="10dp"
       android:horizontalSpacing="10dp"
       android:stretchMode="columnWidth"
       android:gravity="center"
        android:layout_above="@+id/next"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp">




    </GridView>

    <TextView
        android:text="Quick! Find the matching programming languages!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="14dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:id="@+id/startMessage"
        android:layout_alignParentTop="true"
        tools:fontFamily="monospace" />

</RelativeLayout>